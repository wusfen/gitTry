#!/usr/bin/env bash

# eslint exists
eslint="./node_modules/.bin/eslint"
if [ ! -f "$eslint" ]; then
  eslint="eslint"
  if [ ! -n "$(command -v eslint)" ]; then
    exit 0
  fi
fi


# files
files=`git diff --cached --name-only | grep -E '(.js|vue)$'`


# -deleted
for file in $files; do
  if [ ! -f "$file" ]; then
    files=${files//$file/""}
  fi
done


# no files to eslint
if [ -z "$files" ]; then
  exit 0
fi


# fix
# add again
rs=$($eslint $files --fix --format visualstudio)
git add $files


# echo error warning with color
rs=${rs//": error "/"\033[31m [error] \033[0m"}
rs=${rs//": warning "/"\033[33m [warning] \033[0m"}
echo -e "$rs"


# reject
if [[ "$rs" = *"[error]"* ]]; then
  echo -e "\033[31m"
  echo "代码不规范，队友泪两行。"
  echo "请修复error再提交！"
  echo -e "\033[0m"
  exit 1
fi


# success
echo "提交成功"
# exit 1
