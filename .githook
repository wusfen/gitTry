#!/usr/bin/env bash


# .git/hooks/pre-commit
: << !
#!/usr/bin/env bash
if [ -f ".githook" ];then . ".githook";fi
!


# eslint exists
eslint="./node_modules/.bin/eslint"
if [[ ! -f $eslint ]]; then
  eslint="eslint"
  if [[ ! -n $(command -v $eslint) ]]; then
    # has not eslint
    # npm i -g eslint
    echo -e "\033[31m  please install eslint: npm i -g eslint  \033[0m"
    exit 1
    exit 0
  fi
fi


# files
ext=".(js|jsx|ts|vue)$"
files=$(git diff --cached --name-only | egrep $ext)


# -deleted
for file in $files; do
  if [[ ! -f $file ]]; then
    files=$(echo "$files" | egrep -v "^$file$")
  fi
done


# has not files to eslint
files=$(echo "$files" | egrep -v "^$")
if [[ -z $files ]]; then
  # echo "has not files to eslint"
  exit 0
fi


# fix
quiet="--quiet"
output=$($eslint $files --fix $quiet --format visualstudio)
code=$?


# add again
git add $files


# color
output=${output//"error"/"\033[31merror\033[0m"}


# error exit?
if (( code!=0 )); then
  echo -e "$output"
  echo -e "\033[31m  ERROR  \033[0m"
  exit 1
  exit 0
fi
