#!/usr/bin/env bash

# eslint exists
eslint="./node_modules/.bin/eslint"
if [ ! -f "$eslint" ]; then
  eslint="eslint"
  if [ ! -n "$(command -v eslint)" ]; then
    # has not eslint
    exit 0
  fi
fi


# files
files=`git diff --cached --name-only | grep -E '(.js|vue)$'`


# -deleted
for file in $files; do
  if [ ! -f "$file" ]; then
    files=${files//$file/""}
  fi
done


# has not files to eslint
if [ -z "$files" ]; then
  exit 0
fi


# fix
# add again
rs=$($eslint $files --fix --format visualstudio)
git add $files


# echo error warning with color
rs=${rs//": error "/"\033[31m [error] \033[0m"}
rs=${rs//": warning "/"\033[33m [warning] \033[0m"}


# # reject
if [[ "$rs" = *"[error]"* ]]; then
  echo
  echo -e "$rs"
  echo -e "\033[31m"
  echo "eslint error"
  echo -e "\033[0m"

  exit 1
fi


